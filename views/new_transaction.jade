extends layout

block content
  .page-header
    h3 New Transaction

  form.form-horizontal(role='form', method='POST')
    input(type='hidden', name='_csrf', value=token)
    .form-group
      label(class='col-xs-2 control-label', for='name')
        i.fa.fa-user
      .col-xs-8
        .example-numbers
          input.form-control(class='typeahead', type='text', autofocus=true, autocomplete='off', spellcheck='false', dir='auto')
    .form-group
      label(class='col-xs-2 control-label', for='amount') Amount
      .col-xs-8
        .btn-group.btn-group-justified
          .btn-group
            button.btn.btn-default(type='button')
              i.fa.fa-usd
          .btn-group
            button.btn.btn-default(type='button')
              i.fa.fa-btc
        input.form-control(type='text', name='amount', id='amount')
    .form-group
      label(class='col-xs-2 control-label', for='message')
        i.fa.fa-comment
      .col-xs-8
        textarea.form-control(type='text', name='message', id='message', rows='7')
    .form-group
      .col-xs-offset-2.col-xs-2
        button.btn.btn-pay(type='submit')
          i.fa.fa-btc
          | Pay
      .col-xs-2
        button.btn.btn-charge(type='submit')
          i.fa.fa-btc
          | Charge
